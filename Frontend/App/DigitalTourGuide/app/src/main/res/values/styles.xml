<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headline">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="purple_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:backgroundTint">@color/secondaryDarkColor</item>
    </style>
</resources>